@model List<WebBanSach.Models.CartModel>

<ul class="nav navbar-nav navbar-right">
    <li class="nav-item">
        <a href="@Url.Action("Index", "Cart")" class="nav-link cart-link" title="Xem giỏ hàng" aria-label="Giỏ hàng (@Model.Count sản phẩm)">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            @if (Model.Any())
            {
                <span class="badge badge-pill badge-primary cart-count">@Model.Count</span>
            }
            else
            {
                <span class="badge badge-pill badge-secondary cart-count">0</span>
            }
        </a>
    </li>
</ul>

<style>
    .cart-link {
        color: #525151;
        position: relative;
        padding: 10px 15px;
        transition: color 0.3s ease;
    }

        /*.cart-link:hover {
            color: #007bff;*/ /* Bootstrap primary color or your theme color */
            /*text-decoration: none;
        }*/

    .cart-count {
        position: absolute;
        top: 5px;
        right: 5px;
        font-size: 12px;
        padding: 2px 6px;
    }
</style>