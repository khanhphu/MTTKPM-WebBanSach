@model WebBanSach.Models.Data.KhachHang

<ul class="nav navbar-nav navbar-right">
    @if (Session["User"] == null)
    {       
            
        <li><a href="/User/Register" style="color: #ffffff;"> Đăng kí</a></li>
            <li class="dropdown">
                <a href="/User/Login" style="color: #ffffff; background:none" class="dropdown-toggle" data-toggle="dropdown"> Đăng nhập <b class="caret"></b></a>
                <ul class="dropdown-menu" style="padding: 15px;min-width: 250px">
                    <li>
                        <div class="row">
                            <div class="col-md-12">
                                @using (Html.BeginForm("LoginPage", "User", FormMethod.Post))
                                {
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên đăng nhập" })
                                        @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox"> Ghi nhớ?
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn-login">Đăng nhập</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </li>
                </ul>
            </li>
            <li>
                <a href="/Admin/Login"><i class="fa fa-user-secret" aria-hidden="true" style="color: #525151;"></i></a>
            </li>
            @Html.Action("CartHeader", "Cart")
    }
    else
    {
        <li class="dropdown" style=" display: flex; justify-content: center;align-items: center;">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-user-o" aria-hidden="true"></i> Tài Khoản : @Session["User"] <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li>
                    <a href="/User/EditUser"><i class="fa fa-smile-o" style="margin-right: 5px;" aria-hidden="true"></i> Hồ sơ</a>
                </li>
                <li><a href="/Cart"><i class="fa fa-cart-plus" style="margin-right: 6px;" aria-hidden="true"></i>Giỏ Hàng</a></li>
                <li>
                    <a href="/Cart/TrackingOder"><i class="fa fa-archive"></i> Đơn Hàng</a>
                </li>
                <li>
                    <a href="/User/Logout"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a>
                </li>
            </ul>
            <!-- /.dropdown-user -->
        </li>
    }

</ul>
<style>
    /* Existing styles... */
    .btn-login { /* Custom class for login button */
        background-color: #2F4F4F; /* Dark slate gray */
        color: #F5F6F0;
        border: 2px solid #DAA520; /* Goldenrod border */
        border-radius: 10px;
        display: block;
        padding: 10px 20px;
        margin: 0 auto;
        width: 80%; /* Fit within parent */
        max-width: 150px; /* Limit width */
        transition: all 0.3s;
    }

        
</style>

